<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ProfileFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Profil"
                android:textSize="20sp"
                android:textStyle="bold"/>
        <ImageView
                android:src="@drawable/person_24"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:background="@drawable/sphere_shape_blue" android:layout_marginTop="50dp"/>
        <TextView
                android:text="username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_gravity="center" android:textSize="34sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="3" android:layout_marginTop="50dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:src="@drawable/flame_24"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/flame"
                        android:background="@drawable/sphere_shape_orange"/>
                <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewFlame" android:textSize="20sp"/>
                <TextView
                        android:text="@string/activity_days_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DescriptionFlame"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:src="@drawable/timer_24"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/timer"
                        android:background="@drawable/sphere_shape_black"/>
                <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewTimer" android:textSize="20sp"/>
                <TextView
                        android:text="@string/activity_time_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DescriptionTimer"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:src="@drawable/ecg_heart_24"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/heart"
                        android:background="@drawable/sphere_shape_red"/>
                <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewHeart" android:textSize="20sp"/>
                <TextView
                        android:text="@string/heart_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DescriptionHeart"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
